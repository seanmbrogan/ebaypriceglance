{
	"root": true,
	
	"env": {
		"node": true,
		"amd": true,
		"es6": true
		
	},
	"parser": "babel-eslint",
	"parserOptions": {
		
		"ecmaVersion":2021,
		"sourceType": "script"
	},
	"plugins": ["json", "node"],
	"extends": ["plugin:json/recommended", "eslint:recommended"],

	"rules": {
		"no-multiple-empty-lines":["warn",{"max":0}],
		"no-unused-vars":"warn",
		"indent": ["warn", "tab"],
		"linebreak-style": ["warn", "unix"],
		"quotes": ["warn", "double"],
		"semi": ["error", "always"],
		"no-invalid-this":"error",
		"sort-vars":"warn",
		"max-nested-callbacks":["warn",{"max":3}],
		"eqeqeq":"warn",
		"no-undefined":"error"
		
	}
	

}
