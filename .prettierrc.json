{
	"arrowParens": "always",
	"endOfLine": "lf",
	"insertPragma": false,
	"proseWrap": "never",
	"quoteProps": "as-needed",
	"requirePragma": false,
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true,
	"filepath": "${workspacefolder}/.prettierc",
	
	"parser": "babel",
	"ignorePatterns": "**/transforms/*.js",
	"embeddedLanguageFormatting": "auto",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"parser": "json"
			}
		}
	]
}
